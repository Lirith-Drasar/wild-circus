{% extends 'base.html.twig' %}

{% block title %}Shows index{% endblock %}

{% block body %}
    <h1>Shows index</h1>

        <div class="message-link_container">
        <a class="message-index_link" href="{{ path('city_index') }}">Vers les villes proposées</a>
        <a class="message-index_link" href="{{ path('performance_index') }}">Vers les performance proposées</a>
        <a class="message-index_link" href="{{ path('circassian_index') }}">Vers les circassian proposées</a>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.Name }}</td>
                <td>{{ show.Description }}</td>
                <td>{{ show.Image }}</td>
                <td>
                    <a href="{{ path('shows_show', {'id': show.id}) }}">show</a>
                    <a href="{{ path('shows_edit', {'id': show.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('shows_new') }}">Create new</a>
{% endblock %}
